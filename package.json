{
  "name": "express-ms-template",
  "version": "1.0.2",
  "description": "Express template",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/bin/www.js",
    "dev": "nodemon src/bin/www.js | bunyan",
    "docker": "docker-compose -f docker-compose.yml up --build",
    "test": "jest",
    "test.watch": "jest --watchAll",
    "test.coverage": "jest --coverage",
    "test.ci": "jest --ci --runInBand",
    "lint": "eslint .",
    "lint.fix": "eslint . --fix",
    "stryker": "stryker run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Fcmam5/express-ms-template.git"
  },
  "author": "Abdeldjalil Fortas (https://fcmam5.me)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Fcmam5/express-ms-template/issues"
  },
  "homepage": "https://github.com/Fcmam5/express-ms-template#readme",
  "devDependencies": {
    "@stryker-mutator/core": "^4.3.1",
    "@stryker-mutator/jest-runner": "^4.3.1",
    "@types/jest": "^26.0.19",
    "eslint": "^7.16.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-sonarjs": "0.5.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.1",
    "@hapi/joi": "17.1.1",
    "body-parser": "1.19.0",
    "bunyan": "^1.8.14",
    "config": "^3.3.3",
    "express": "4.17.1",
    "helmet": "^4.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint && npm run test.coverage"
    }
  },
  "lint-staged": {
    "./src/*.{js,ts}": [
      "prettier --write",
      "eslint . --fix-dry-run",
      "git add"
    ]
  }
}
